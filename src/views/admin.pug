extends layout

block content
    .page-header
        h3 Amministrazione
        hr

    .row
        .col-sm-6
            h2 Domanda corrente
            p #{question}
            p

        .col-sm-6
            h2 Prenotazioni
            table
                for reservation in reservationList
                    tr
                        td= reservation.nickname
                        td= reservation.timestamp
                        td  button.btn.btn-primary(type='submit')
                            i.fa.fa-check
                            | Conferma prenotazione

        .col-sm-6
            h2 Risposta alla domanda
            p #{answer}